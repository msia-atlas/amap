{% extends 'AmapBundle:Default:layout.html.twig' %}

{% block main -%}
      {{ form_start(form) }}
    <div class="row">
        <div class ="col-md-12 titre">
            <h1>Création des magasins</h1>
        </div>
    </div>

     <fieldset class="form-group">    
            <div class="row">
                <div class ="col-md-2">
                    {{ form_label(form.adresse,'Adresse :') }}
                </div>
                <div class ="col-md-4" >
                        {{ form_widget(form.adresse,{'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
     </fieldset>
         <fieldset class="form-group">    
            <div class="row">
                <div class ="col-md-2">
                    {{ form_label(form.responsable,'Responsable :') }}
                </div>
                <div class ="col-md-4" >
                        {{ form_widget(form.responsable,{'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
     </fieldset>
  <div class="row">
         {{ form_widget(form.submit)}}
         {{ form_end(form) }}
    </div>     
                         

  <div class="row">
        <div class="record_actions">
            <ul>
                <li>
                    <a href="{{ path('magasin') }}">
                        Retourner à la liste des produits
                    </a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
