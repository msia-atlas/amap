{% extends 'AmapBundle:Default:layout.html.twig' %}

{% block main -%}
<div class="row">
    <div class ="col-md-12 titre">
        <h1>Gestion des magasins</h1>
    </div>
</div>

 <div class="row">
    <table class="table table-striped" id="tableauGestion">
        <thead>
            <tr>
                <th>Adresse</th>
                <th>Responsable</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('magasin_show', { 'id': entity.id }) }}">{{ entity.adresse }}</a></td>
                <td>{{ entity.responsable }}</td>
                <td>
                  <a href="{{ path('magasin_edit', { 'id': entity.id }) }}" class="btn btn-default btn-xs" role="button">Modifier</a>
                  <a href="{{ path('magasin_delete', { 'id': entity.id }) }}" class="btn btn-danger btn-xs" role="button">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="row">

    <a href="{{ path('magasin_new') }}" class="btn btn-success pull-right" role="button">
        Ajouter un magasin
    </a>
</div>
{% endblock %}