{% extends 'AmapBundle:Default:layout.html.twig' %}

{% block main -%}
 {{ form_start(edit_form) }}
    <div class="row">
        <div class ="col-md-12 titre">
            <h1>Edition de produit</h1>
        </div>
    </div>

    <fieldset class="form-group">    
        <div class="row">
            <div class ="col-md-2">
                {{ form_label(edit_form.libelle,'Libelle :') }}
            </div>
            <div class ="col-md-4" >
                    {{ form_widget(edit_form.libelle,{'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
            
    <fieldset class="form-group">    
        <div class="row">
            <div class ="col-md-2">
                {{ form_label(edit_form.saison,'Saison :') }}
            </div>
            <div class ="col-md-4" >
                    {{ form_widget(edit_form.saison,{'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
            
    <fieldset class="form-group">    
        <div class="row">
            <div class ="col-md-2">
                {{ form_label(edit_form.typeProduit,'Type de produit :') }}
            </div>
            <div class ="col-md-4" >
                    {{ form_widget(edit_form.typeProduit,{'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
            
    <fieldset class="form-group">    
        <div class="row">
            <div class ="col-md-2">
                {{ form_label(edit_form.uniteMesure,'Unité de mesure :') }}
            </div>
            <div class ="col-md-4" >
                    {{ form_widget(edit_form.uniteMesure,{'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
     
    <fieldset class="form-group">    
        <div class="row">
            <div class ="col-md-2">
                {{ form_label(edit_form.prixUnitaire,'Prix unitaire :') }}
            </div>
            <div class ="col-md-4" >
                    {{ form_widget(edit_form.prixUnitaire,{'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
    <fieldset class="form-group">
         <div class="row">
                <div class ="col-md-1">
                    {{ form(edit_form) }}
                </div>
                <div class ="col-md-1">
                    {{ form(delete_form) }}
                </div>
        <div>
    </fieldset>
    <div class="row">
        <div class="record_actions">
            <ul>
                <li>
                    <a href="{{ path('produit') }}">
                        Retourner à la liste des produits
                    </a>
                </li>
            </ul>
        </div>
    </div>


{% endblock %}
