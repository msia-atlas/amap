{% extends 'AmapBundle:Default:layout.html.twig' %}
    
{% block main -%}
     {{ form_start(form) }}
     <div class="row">
        <div class ="col-md-12 titre">
            <h1>Création d'AMAP</h1>
        </div>
    </div>

    <fieldset class="form-group">    
            <div class="row">
                <div class ="col-md-2">
                    {{ form_label(form.adresse,'Adresse :') }}
                </div>
                <div class ="col-md-4" >
                        {{ form_widget(form.adresse,{'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
     </fieldset>
     
     
                        
    <fieldset class="form-group">    
            <div class="row">
                <div class ="col-md-2">
                    {{ form_label(form.nom,'Nom :') }}
                </div>
                <div class ="col-md-4" >
                        {{ form_widget(form.nom,{'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
     </fieldset>

    <div class="row">
         {{ form_widget(form.submit)}}
         {{ form_end(form) }}
    </div>   

  <div class="row">
        <div class="record_actions">
            <ul>
                <li>
                    <a href="{{ path('amap') }}">
                        Retourner à la liste des AMAPS
                    </a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
